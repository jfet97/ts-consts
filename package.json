{
	"name": "ts-consts",
	"version": "0.1.2",
	"repository": "git@github.com:jfet97/ts-consts.git",
	"author": "Andrea Simone Costa",
	"license": "MIT",
	"files": [
		"src",
		"dist"
	],
	"type": "module",
	"types": "./dist/index.d.ts",
	"main": "./dist/index.cjs",
	"exports": {
		".": {
			"require": {
				"default": "./dist/index.cjs"
			},
			"import": {
				"default": "./dist/index.js"
			}
		}
	},
	"scripts": {
		"configure-husky": "npx husky install && npx husky add .husky/pre-commit \"npx --no-install lint-staged\"",
		"ts-node": "ts-node-esm",
		"format": "npm run format:prettier",
		"format:prettier": "prettier --write .",
		"format:check:prettier": "prettier --check .",
		"lint": "eslint . --ext .ts,.tsx --fix",
		"lint:check": "eslint . --ext .ts,.tsx",
		"type-check": "tsc --noEmit",
		"dev": "npm run clean && tsc --build --watch tsconfig.cjs.json tsconfig.esm.json",
		"build": "npm run clean && tsup src/index.ts  --sourcemap --dts --format esm,cjs",
		"test": "jest",
		"clean": "rm -rf dist node_modules/.cache",
		"typedoc": "typedoc"
	},
	"devDependencies": {
		"@jest/types": "28.1.3",
		"@swc/core": "1.2.223",
		"@swc/helpers": "0.4.3",
		"@swc/jest": "0.2.22",
		"@tsconfig/node16": "^1.0.3",
		"@tsconfig/recommended": "1.0.1",
		"@types/jest": "28.1.6",
		"@types/node": "17.0.39",
		"@typescript-eslint/eslint-plugin": "5.32.0",
		"@typescript-eslint/parser": "5.32.0",
		"eslint": "8.21.0",
		"eslint-config-prettier": "8.5.0",
		"eslint-plugin-simple-import-sort": "7.0.0",
		"eslint-plugin-tsdoc": "0.2.16",
		"husky": "^8.0.1",
		"jest": "28.1.3",
		"jest-watch-select-projects": "2.0.0",
		"jest-watch-suspend": "1.1.2",
		"jest-watch-typeahead": "2.0.0",
		"lint-staged": "^13.0.3",
		"prettier": "2.7.1",
		"ts-jest": "28.0.7",
		"ts-node": "10.9.1",
		"tsd": "0.22.0",
		"tsup": "^6.2.2",
		"typedoc": "^0.23.10",
		"typedoc-plugin-missing-exports": "^0.23.0",
		"typescript": "4.7.4"
	},
	"lint-staged": {
		"**/*.{js,jsx,json,ts,tsx}": [
			"eslint . --fix",
			"prettier --write ."
		]
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	}
}
